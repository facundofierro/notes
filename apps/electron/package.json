{
  "name": "@agelum/electron",
  "version": "0.1.0",
  "private": true,
  "description": "Agelum Notes",
  "author": {
    "name": "Agelum",
    "email": "notes@agelum.com"
  },
  "homepage": "https://notes.agelum.com",
  "main": "src/main.js",
  "scripts": {
    "dev": "electron ./src/main.js",
    "prebuild": "rm -rf standalone-build && mkdir -p standalone-build && cp -RL ../web/.next/standalone/* standalone-build/ && mkdir -p standalone-build/apps/web/.next && cp -RL ../web/public standalone-build/apps/web/ && cp -RL ../web/.next/static standalone-build/apps/web/.next/ 2>/dev/null || true",
    "postbuild": "mkdir -p ../site/public/downloads && cp dist/*.{dmg,exe,AppImage,deb,rpm,zip} ../site/public/downloads/ 2>/dev/null || true",
    "build": "pnpm prebuild && electron-builder build",
    "build:mac": "pnpm prebuild && electron-builder build --mac",
    "build:win": "pnpm prebuild && electron-builder build --win",
    "build:linux": "pnpm prebuild && electron-builder build --linux",
    "build:docker": "pnpm prebuild && electron-builder build --linux --win",
    "publish": "pnpm prebuild && electron-builder build --publish always",
    "publish:mac": "pnpm prebuild && electron-builder build --mac --publish always",
    "publish:win": "pnpm prebuild && electron-builder build --win --publish always",
    "publish:linux": "pnpm prebuild && electron-builder build --linux --publish always",
    "start": "electron ./src/main.js"
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^26.7.0"
  }
}
