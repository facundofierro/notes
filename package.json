{
  "name": "agelum",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "web:dev": "pnpm --filter @agelum/web dev",
    "web:build": "pnpm --filter @agelum/web build",
    "web:start": "pnpm --filter @agelum/web start",
    "chrome:dev": "pnpm --filter @agelum/chrome-plugin dev",
    "chrome:build": "pnpm --filter @agelum/chrome-plugin build",
    "site:dev": "pnpm --filter @agelum/site dev",
    "site:build": "pnpm --filter @agelum/site build",
    "electron:dev": "pnpm --filter @agelum/electron dev",
    "electron:start": "pnpm --filter @agelum/electron start",
    "electron:build": "pnpm --filter @agelum/electron build",
    "electron:build:mac": "pnpm --filter @agelum/electron build:mac",
    "electron:build:win": "pnpm --filter @agelum/electron build:win",
    "electron:build:linux": "pnpm --filter @agelum/electron build:linux",
    "electron:build:docker": "pnpm --filter @agelum/electron build:docker",
    "electron:publish": "pnpm --filter @agelum/electron publish",
    "electron:publish:mac": "pnpm --filter @agelum/electron publish:mac",
    "electron:publish:win": "pnpm --filter @agelum/electron publish:win",
    "electron:publish:linux": "pnpm --filter @agelum/electron publish:linux"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "turbo": "^2.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "pnpm": {
    "overrides": {
      "lodash@>=4.0.0 <=4.17.22": ">=4.17.23",
      "hono@<4.11.7": ">=4.11.7",
      "next@>=15.0.0 <15.1.2": ">=15.1.2",
      "esbuild@<=0.24.2": ">=0.25.0",
      "next@>=15.0.0 <15.2.2": ">=15.2.2",
      "next@>=15.0.0 <=15.4.4": ">=15.4.5",
      "next@>=15.0.0-canary.0 <15.4.7": ">=15.4.7",
      "jsondiffpatch@<0.7.2": ">=0.7.2",
      "next@>=15.0.0 <15.1.6": ">=15.1.6",
      "next@>=15.0.0 <15.2.3": ">=15.2.3",
      "ai@<5.0.52": ">=5.0.52",
      "next@>=14.3.0-canary.77 <15.0.5": ">=15.0.5",
      "next@>=15.0.0-canary.0 <15.0.6": ">=15.0.6",
      "next@>=10.0.0 <15.5.10": ">=15.5.10",
      "next@>=13.0.0 <15.0.8": ">=15.0.8",
      "qs@<6.14.2": ">=6.14.2"
    }
  }
}
