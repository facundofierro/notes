# Server Mode Configuration
# Set to 'true' when deploying to Vercel or other serverless platforms
# When enabled, the app will use database instead of filesystem for repositories
SERVER_MODE=false

# Note: In local development, leave SERVER_MODE as false or unset
# The app will scan the parent directory for repositories

# Gateway / Auth URLs
# Web app URL used by Site auth redirect callback allowlist
WEB_APP_URL=http://localhost:6500
# Site app URL used by Web auth gateway
SITE_URL=http://localhost:6600
# Public Site URL for browser login links from the Web app UI
NEXT_PUBLIC_SITE_URL=http://localhost:6600

# Secret used by @agelum/web gateway for signing JWTs.
# Use a long random value in production.
GATEWAY_JWT_SECRET=replace-with-a-long-random-secret
